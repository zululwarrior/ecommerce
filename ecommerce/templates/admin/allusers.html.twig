{% extends 'base.html.twig' %}

{% block title %}{{ app.user.email }}{% endblock %}
{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Hi {{ app.user.email }}</h1>

    {% if users %}
        <table id = "users" class="table table-striped">
            <thead>
            <tr>
                <th>User emails</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{user.email}}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>
                        <a href ="/admin/edituser/{{user.id}}" class = "btn btn-dark">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p> No users to display</p>
    {% endif %}
{% endblock %}


{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}